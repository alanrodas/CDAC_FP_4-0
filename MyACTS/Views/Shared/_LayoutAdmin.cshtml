<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyACTS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyACTS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <img class="navbar-brand" src="~/img/cdac_acts_inverted_logo.svg">
            <partial name="_LoginPartial.cshtml" />
        </nav>
    </header>

    <div class="row main">
        <div class="col-md-3 col-sm-4 col-xs-12 h-100 bg-white">
            <partial name="_Sidebar.cshtml" />
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
            @RenderBody()
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PG-DAC Group 40 (Sept 2022)
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

