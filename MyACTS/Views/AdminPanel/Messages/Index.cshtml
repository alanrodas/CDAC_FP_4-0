@model IList<MyACTS.Models.Entities.Message>

@{
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Messages";
}

<h3>Messages</h3>

<p>
    <a asp-controller="Messages" asp-action="Create" class="btn btn-success">Create New</a>
</p>
@if (Model.Count > 0)
{
    <table class="table bg-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ActionText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ActionUrl)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionUrl)
                </td>
                <td>

                    <a asp-controller="Messages" asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="View">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-controller="Messages" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-controller="Messages" asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Delete">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}