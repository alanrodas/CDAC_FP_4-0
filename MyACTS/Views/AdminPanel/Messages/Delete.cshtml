@model MyACTS.Models.Entities.Message

@{
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Delete";
}

<h3>Messages</h3>

<div class="card bg-white">
    <div class="card-header">
        <h4>Are you sure you want to delete this?</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Body)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ActionText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ActionText)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ActionUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ActionUrl)
            </dd>
        </dl>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Messages" asp-action="Index"
                class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
