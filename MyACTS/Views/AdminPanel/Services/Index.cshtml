@model IList<MyACTS.Models.Entities.Service>

@{
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Services";
}

<h3>Services</h3>

<p>
    <a asp-controller="Services" asp-action="Create" class="btn btn-success">Create New</a>
</p>
@if (Model.Count > 0)
{
    <table class="table bg-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Url)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>

                    <a asp-controller="Services" asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="View">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-controller="Services" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-controller="Services" asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Delete">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}